<h1>All notes</h1>
<%= render 'search' %>

<% @notes.each do |note| %>
  <% if params[:query].present? %>
   <p> <%= note.pg_search_highlight%> </p>
    <br>
  <% else %>
    <p> <%= note.name %> </p>
    <p> <%= note.content %> </p>
    <br>
  <% end %>
<% end %>

<h2>Create a new note</h2>
<%= render "form", note: @note %>
