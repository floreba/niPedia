<div class="container">
  <div class="folder-header">
    <h2 class="header">Your Folders</h2>
    <%# New folder dropdown %>
    <div class="dropdown">
      <button class="btn button-primary btn-add-folder" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        <div class="button-round">
          <p class="button-add">+</p>
        </div>
      </button>
      <ul class="dropdown-menu dropdown-card" aria-labelledby="dropdownMenuButton1">
        <li>
          <div class="flex-centered">
            <div>
              <%= simple_form_for [@folder] do |f| %>
                <div class="m-3">
                  <%= f.input :name,label: "Create a new folder", placeholder: "name", input_html: { class: 'input-home' } %>
                </div>
              <% end %>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
  <%# end of the dropdown %>
  <% @folders.each do |folder| %>
    <p><%= link_to folder.name, folder_path(folder) %></p>
  <% end %>
</div>
