<div class="container">
  <h2 class="header">Your Folders</h2>

  <% @folders.each do |folder| %>
    <p><%= link_to folder.name, folder_path(folder) %></p>
  <% end %>
  <div class="dropdown my-5">
    <button class="btn button-primary btn-add-fridge dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
      +
    </button>
    <ul class="dropdown-menu dropdown-card" aria-labelledby="dropdownMenuButton1">
      <li>
        <div class="flex-centered">
          <div>
            <%= simple_form_for [@folder] do |f| %>
              <div class="m-3">
                <%= f.input :name, placeholder: "new folder", input_html: { class: 'input-home' } %>
                <%# <%= f.button :submit %>
              </div>
            <% end %>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>
