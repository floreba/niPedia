<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
          data: {turbo: false}, class: "form-size") do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                # class="input-background"
                html: { class: "input-background" },
                input_html: { class: "input-field" }%>
    <%= f.input :password,
                required: false,
                input_html: { class: "input-field" }%>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "button-update" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
